{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@js/*": ["src/js/*"]
    },
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src"]
}
