{
  "name": "cotswold-cycle-adventures",
  "version": "1.0.0",
  "description": "Bike adventures in Cotswold",
  "main": "app.js",
  "scripts": {
    "start:prod": "SET NODE_ENV=production && nodemon server.js",
    "debug": "ndb server.js",
    "build:sass": "sass --quiet src/scss/main.scss public/css/style.css",
    "watch:sass": "npx chokidar \"src/scss/**/*.scss\" --initial --ignoreInitial --verbose -c \"npm run build:sass\"",
    "start": "nodemon server.js",
    "dev": "nodemon server.js",
    "watch:js": "parcel watch ./src/js/index.js --out-dir ./public/js --out-file bundle.js",
    "build:js": "parcel build ./src/js/index.js --out-dir ./public/js --out-file bundle.js"
  },
  "keywords": [
    "bike",
    "road",
    "bike",
    "mountain",
    "bike"
  ],
  "author": "Artur Sas Dunajewski",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "connect-history-api-fallback": "^2.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "parcel-bundler": "^1.12.5",
    "prettier": "^3.5.1",
    "sass": "^1.85.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.0",
    "bootstrap": "^5.3.3",
    "chokidar-cli": "^3.0.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.10.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "pug": "^3.0.3",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "stripe": "^17.6.0",
    "validator": "^13.12.0",
    "xss-clean": "^0.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
